{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "essential": true,
            "memory": 128,
            "image": "raymondhfeng/myproject:latest",
            "mountPoints": [
                {
                    // "containerPath": "/app",
                    "/var/app/current"
                    "sourceVolume": "_App"
                }
            ],
            "name": "app"
        },
        {
            "environment": [
                {
                    "name": "POSTGRES_DB",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "postgres"
                }
            ],
            "essential": true,
            "memory": 128,
            "image": "postgres",
            "name": "db"
        },
        {
            "essential": true,
            "memory": 128,
            "image": "nginx",
            "mountPoints": [
                {
                    "containerPath": "/etc/nginx/conf.d",
                    "sourceVolume": "_ConfigNginx"
                }
            ],
            "name": "nginx",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/app/current/app"
                // "sourcePath": "./app"
            },
            "name": "_App"
        },
        {
            "host": {
                "sourcePath": "/var/app/current/config/"
                "sourcePath": "./config/nginx"
            },
            "name": "_ConfigNginx"
        }
    ]
}
